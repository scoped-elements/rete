{
  "name": "@scoped-elements/rete",
  "description": "Webcomponent rete-o following open-wc recommendations",
  "license": "MIT",
  "author": "guillem.cordoba@gmail.com",
  "version": "0.0.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "rimraf dist && rollup -c && concurrently -k -r \"rollup -c -w\" \"wds\"",
    "build": "rimraf dist && rollup -c && npm run analyze -- --exclude dist",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "publish-to-branch": "npm run build && gh-pages -d ./ -b build"
  },
  "dependencies": {
    "lit": "^2.0.2",
    "regenerator-runtime": "^0.13.9",
    "rete": "^1.4.5",
    "rete-alight-render-plugin": "^0.1.5",
    "rete-connection-plugin": "^0.9.0",
    "rete-context-menu-plugin": "^0.6.0",
    "rete-dock-plugin": "^0.2.1",
    "rete-minimap-plugin": "^0.3.1",
    "rete-module-plugin": "^0.4.1",
    "rete-stage0-render-plugin": "^0.2.14"
  },
  "devDependencies": {
    "@babel/plugin-transform-instanceof": "^7.16.0",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/eslint-config": "^4.3.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@web/dev-server": "^0.1.25",
    "concurrently": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "gh-pages": "^3.2.3",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.3",
    "rollup-plugin-lit-css": "^3.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "import/no-duplicates": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
